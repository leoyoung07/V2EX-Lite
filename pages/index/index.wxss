.list__avatar_mini {
  width: 24px;
  height: 24px;
}
.list__avatar_normal {
  width: 48px;
  height: 48px;
}
.list__avatar_large {
  width: 73px;
  height: 73px;
}

.list__item_wrapper {
  border-bottom: 1px solid #e2e2e2;
  margin: 0 10px;
  padding: 10px 0;
  font-size:14px;
}
.list__item_wrapper:last-of-type {
  border: none;
}
.list__img_left-top {
  float:left;
  margin:0 5px 5px 0;
}
.list__replies_right {
  float:right;
  font-size:12px;
  line-height:12px;
  border-radius:12px;
  background:#aab0c6;
  padding:2px 10px;
  color:white;
  font-weight:bold;
}
.list__item_title {
  font-size:16px;
  font-weight: bold;
}

.list__item_node {
  border-radius: 2px;
  color: #999;
  background-color: #f5f5f5;
  padding: 0 3px;
}

.list__info_wrapper {
  line-height:18px;
  font-size:12px;
  height:18px;
}

.list__text_bold {
  font-weight: bold;
}

.color__text_grey {
  color: #ccc;
}