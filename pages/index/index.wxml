<!--pages/index/index.wxml-->
<block wx:for="{{topics.hot}}" wx:key="index">
  <view class="common__list-item_wrapper" bindtap="viewTap" data-id="{{item.id}}">
    <view>
      <image
        src="{{item.member.avatar_mini}}"
        mode="center" class="common__avatar_mini common__img_left-top">
      </image>
      <view class="list__info_wrapper">
        <text>{{item.member.username}}</text>
        <text class="common__text_bold common__text-color_grey"> â€¢ </text>
        <text class="list__item_node">{{item.node.title}}</text>
        <text class="list__replies_right">{{item.replies}}</text>
      </view>
      <text class="list__item_time common__text-color_grey">{{item.last_touched}}</text>
    </view>
    <view class="common__title_normal">{{item.title}}</view>
  </view>
</block>